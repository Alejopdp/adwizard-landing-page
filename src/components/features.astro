---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const features: Array<FeatureItem> = [
  {
    title: "Measure your marketing ROI",
    description:
      "Witness the impact of your campaigns with precise ROI measurements, empowering you to make strategic decisions.",
    icon: "mdi:handshake",
  },
  {
    title: "Understand your users behavior",
    description:
      "Unveil deep insights into user behavior, illuminating pathways to enhance engagement and satisfaction.",
    icon: "mdi:feather",
  },
  {
    title: "Cross-platform support",
    description:
      "Reach across realms with seamless support for all devices, ensuring your message transcends barriers.",
    icon: "mdi:directions-fork",
  },
  {
    title: "Easy Integration",
    description:
      "Effortlessly integrate spellsâ€”uh, we mean, integrate our lightweight SDKs across iOS, Android, React Native, and Web.",
    icon: "mdi:graph",
  },
  {
    title: "Comprehensive Analytics",
    description:
      "Gather arcane insights by fusing marketing and product analytics, revealing hidden patterns in user behavior.",
    icon: "mdi:search-web",
  },
  {
    title: "Privacy First",
    description:
      "Safeguard user identities with a veil of anonymity, ensuring compliance with the strictest privacy enchantments.",
    icon: "mdi:account-group",
  },
];
---

<ContentSection title="Features" id="features">
  <!-- <Fragment slot="lead">
    
    Explore Our Suite of Spells
  </Fragment> -->
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="size-16 rounded-full border-2 p-3 border-tertiary">
            <Icon name={icon} class="size-full text-tertiary" />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
