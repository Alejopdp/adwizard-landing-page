---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const howItWorks: Array<FeatureItem> = [
  {
    title: "Create Campaigns",
    description:
      "Generate unique URLs from our dashboard to track your marketing campaigns.",
    icon: "mdi:handshake",
  },
  {
    title: "Capture Data",
    description:
      "Our server captures the user's IP when they click the URL, redirecting them to the App Store.",
    icon: "mdi:feather",
  },
  {
    title: "Analyze and Optimize",
    description:
      "Use our analytics tools to track events and optimize your marketing strategies.",
    icon: "mdi:directions-fork",
  }
];
---

<ContentSection title="How it works" id="how-it-works">
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      howItWorks.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full" />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
